script type="text/ng-template" id="action-selector/open-modal-body.html"
  h2 Modal Settings
  form
    md-content
      div layout-padding="" layout="column"
        div layout-padding="" layout="row"
          div flex="50"
            md-input-container.md-block ng-init="payload.modal.backgroundColor = payload.modal.backgroundColor || '#ffffff'" style="margin-top: 14px !important;"
              label Modal Background Color
              input type="color" ng-model="payload.modal.backgroundColor"
          
          div flex="50"
            label.md-label
              ' Modal Background Image
            image-uploader.image-uploader-left ng-model="payload.modal.backgroundImage"

        div flex="100"
          md-input-container.md-block
            label Modal Text Color
            input type="color" ng-model="payload.modal.color" ng-init="payload.modal.color = payload.modal.color || '#5B0A67'"

        hr.hr

        div flex="100"
          md-input-container.md-block
            label Button Background Color
            input type="color" ng-model="payload.modal.button.backgroundColor" ng-init="payload.modal.button.backgroundColor = payload.modal.button.backgroundColor || '#5B0A67'"
        div flex="100"
          md-input-container.md-block
            label Button Text Color
            input type="color" ng-model="payload.modal.button.color" ng-init="payload.modal.button.color = payload.modal.button.color || '#ffffff'"
        div flex="100"
          label.md-label Button Action
          action-selector.no-padding ng-model="payload.modal.button.action"

    .form-actions
      md-button.md-raised.md-primary ng-click="save()" Save