a {
  cursor: pointer;
}

.directories {

}

.directories ul {
  list-style: none;
}

.directories__file {

}

.directories__directory {

}
.directories__directory:before {
  content: "";
  display: inline-block;
  width: 14px;
  height: 14px;
  margin-right: 5px;
  vertical-align: middle;
  background: url(<%=asset_path("beach_api_core/folder-closed.png")%>);
}
.directories__file:before {
  content: "";
  display: inline-block;
  width: 14px;
  height: 14px;
  margin-right: 5px;
  vertical-align: middle;
  background: url(<%=asset_path("beach_api_core/file.png")%>);
}

.directories__directory-name,
.directories__file-name {
  vertical-align: middle;
  cursor: pointer;
  text-decoration: none;
  color: #333;
}

.directories__directory-name:hover,
.directories__file-name:hover {
  text-decoration: underline;
}

.directories__directory-settings-list {
  position: absolute;
  padding: 0;
  background: white;
  box-shadow: 0px 0px 5px rgba(0,0,0,.2);
  min-width: 90px;
}

.directories__directory-settings-list a {
  padding: 10px;
  display: block;
  text-decoration: none;
  color: #333;
}

.directories__directory-settings-list a:hover {
  background: #f7f7f7;
}

.directories__directory-settings {
  display: inline-block;
  vertical-align: middle;
}

.directories__directory-settings i {
  color: #c5c5c5;
  cursor: pointer;
  font-size: 15px;
  margin: 6px;
}
.directories__directory-settings i:hover {
  color: #333;
}

a.delete {
  color: #F44336;
}